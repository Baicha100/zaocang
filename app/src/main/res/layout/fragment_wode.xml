<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#13227a">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:background="#13227a">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/img_account_avatar1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/wode3"
                    />
                <TextView
                    android:id="@+id/txt_account_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_account_avatar1"
                    android:layout_toEndOf="@+id/img_account_avatar1"
                    android:layout_margin="10dp"
                    android:text="请先登录"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/img_account_avatar1"
                    android:layout_toEndOf="@+id/img_account_avatar1"
                    android:layout_below="@id/txt_account_name1"
                    android:layout_margin="10dp"
                    android:text="登录查看个人信息"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wodedizhi"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的地址"
            android:textSize="18sp"/>
        <ImageView
            android:layout_marginLeft="170dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gengduo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wodepingjia"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的评价"
            android:textSize="18sp"/>
        <ImageView
            android:layout_marginLeft="170dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gengduo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bangzhu"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助与反馈"
            android:textSize="18sp"/>
        <ImageView
            android:layout_marginLeft="150dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gengduo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/kefu"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服中心"
            android:textSize="18sp"/>
        <ImageView
            android:layout_marginLeft="170dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gengduo"/>
    </LinearLayout>
</LinearLayout>